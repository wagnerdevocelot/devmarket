<% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
        <%= flash[:notice] %>
    </div>    
<% end %> 

<h1>Departamentos</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.nome %></td>
        <td><%= link_to 'Show', departamento, class:"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_departamento_path(departamento), class:"btn btn-info" %></td>
        <td><%= link_to 'Destroy', departamento, method: :delete, class:"btn btn-danger", data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Departamento', new_departamento_path, class:"btn btn-primary" %>
